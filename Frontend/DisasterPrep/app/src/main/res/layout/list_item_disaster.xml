<!-- list_item_disaster.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/disasterImageView"
        android:layout_width="81dp"
        android:layout_height="142dp"
        android:contentDescription="@null"
        android:layout_marginRight="15dp"
        android:src="@drawable/geological_earthquake" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/disasterNameTextView"
            android:layout_width="94dp"
            android:layout_height="34dp"
            android:text="Disaster"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/disasterDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster Description" />

    </LinearLayout>

</LinearLayout>
